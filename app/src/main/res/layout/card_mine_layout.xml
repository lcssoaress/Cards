<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".CardMineActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:padding="">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/doom"
                />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="140dp"
                android:padding="20dp"
                android:text="DOOM ETERNAL"
                android:textColor="#910401" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txt1"
                android:padding="20dp"
                android:text="Guns/Techs"
                android:textColor="#910401" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="50dp"
                android:text="ESTRIPAR E LACERAR"
                android:textColor="#910401"
                android:textSize="20dp"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt3"
                android:text="ATÃ‰ O FIM"
                android:textColor="#910401"
                android:textSize="20dp"
                android:paddingLeft="20dp"/>

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_below="@+id/txt2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:backgroundTint="#910401"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="25dp"

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>